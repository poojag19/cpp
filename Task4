//Task4 Program to check eligiblity to vote?
#include<iostream>
using namespace std;

int main() {

    int age;
    cout << "Enter age of the candidate:";
    cin>>age;

    if (age >= 18) {
        cout << "You are eligible for voting";
    } else {
        cout << "You are not eligible for voting";
    }

    return 0;
}
